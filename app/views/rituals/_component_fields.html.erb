<%# Component fields partial for nested form %>
<div class="component-fields border border-gray-200 rounded-lg p-4 mb-3" data-nested-form-target="item">
  <div class="flex items-start justify-between gap-4 mb-3">
    <div class="flex-1 grid md:grid-cols-3 gap-4">
      <!-- Title -->
      <div class="md:col-span-2">
        <%= f.text_field :title,
            placeholder: "Step title...",
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg text-sm" %>
      </div>

      <!-- Type -->
      <div>
        <%= f.select :component_type,
            RitualComponent::COMPONENT_TYPES.map { |t| [RitualComponent::COMPONENT_TYPE_LABELS[t], t] },
            {},
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg text-sm" %>
      </div>
    </div>

    <!-- Remove Button -->
    <button type="button"
            data-action="nested-form#remove"
            class="text-gray-400 hover:text-red-500 p-1"
            title="Remove step">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>

  <div class="grid md:grid-cols-4 gap-4">
    <!-- Description -->
    <div class="md:col-span-3">
      <%= f.text_area :description,
          rows: 2,
          placeholder: "Optional: detailed instructions for this step...",
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg text-sm" %>
    </div>

    <!-- Duration -->
    <div>
      <label class="block text-xs text-gray-500 mb-1">Duration (min)</label>
      <%= f.number_field :duration_minutes,
          min: 1,
          placeholder: "5",
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg text-sm" %>
    </div>
  </div>

  <!-- Hidden position field -->
  <%= f.hidden_field :position %>
  <%= f.hidden_field :_destroy, data: { nested_form_target: "destroy" } %>
</div>
