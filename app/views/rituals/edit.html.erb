<%
  colors = @family.theme_colors
%>

<div class="max-w-3xl mx-auto mt-10">
  <%= render "shared/back_link", path: family_ritual_path(@family, @ritual), text: "Back to Ritual" %>

  <h2 class="text-2xl font-bold mb-2 mt-4" style="color: <%= colors[:primary] %>">Edit Ritual</h2>
  <p class="text-gray-600 mb-6">Update your family ritual.</p>

  <%= render "form", ritual: @ritual, family: @family, family_values: @family_values %>

  <!-- Delete Section -->
  <div class="mt-12 pt-6 border-t border-gray-200">
    <h3 class="text-lg font-semibold text-red-600 mb-2">Danger Zone</h3>
    <p class="text-sm text-gray-600 mb-4">Deleting this ritual cannot be undone.</p>
    <%= button_to "Delete Ritual", family_ritual_path(@family, @ritual),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this ritual? This cannot be undone." },
        class: "btn-danger" %>
  </div>
</div>
