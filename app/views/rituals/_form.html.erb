<%#
  Ritual form partial for new and edit views.

  Required:
    ritual: Ritual object
    family: Family object
    family_values: Collection of FamilyValue objects
%>
<%
  colors = family.theme_colors
%>

<%= form_with model: [family, ritual], local: true, class: "space-y-6", data: { controller: "nested-form" } do |f| %>
  <% if ritual.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-red-800 font-medium mb-2"><%= pluralize(ritual.errors.count, "error") %> prevented this ritual from being saved:</h3>
      <ul class="list-disc list-inside text-red-700 text-sm">
        <% ritual.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Basic Information -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="font-semibold text-gray-800 mb-4">Basic Information</h3>

    <div class="space-y-4">
      <!-- Name -->
      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-opacity-50 focus:border-transparent",
            style: "focus:ring-color: #{colors[:primary]};",
            placeholder: "e.g., Sunday Morning Pancakes" %>
      </div>

      <!-- Type and Frequency -->
      <div class="grid md:grid-cols-2 gap-4">
        <div>
          <%= f.label :ritual_type, "Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :ritual_type,
              Ritual::RITUAL_TYPES.map { |t| [Ritual::RITUAL_TYPE_LABELS[t], t] },
              { include_blank: "Select a type..." },
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg" %>
        </div>
        <div>
          <%= f.label :frequency, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :frequency,
              Ritual::FREQUENCIES.map { |fr| [Ritual::FREQUENCY_LABELS[fr], fr] },
              { include_blank: "Select frequency..." },
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg" %>
        </div>
      </div>

      <!-- Description -->
      <div>
        <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :description,
            rows: 2,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg",
            placeholder: "Brief description of this ritual..." %>
      </div>

      <!-- Purpose -->
      <div>
        <%= f.label :purpose, "Why This Matters", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :purpose,
            rows: 3,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg",
            placeholder: "What makes this ritual meaningful to your family?" %>
      </div>

      <!-- Active Status -->
      <div class="flex items-center gap-2">
        <%= f.check_box :is_active, class: "rounded border-gray-300" %>
        <%= f.label :is_active, "This ritual is active", class: "text-sm text-gray-700" %>
      </div>
    </div>
  </div>

  <!-- Family Values -->
  <% if family_values.any? %>
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="font-semibold text-gray-800 mb-2">Connected Values</h3>
      <p class="text-sm text-gray-600 mb-4">Which family values does this ritual reinforce?</p>

      <div class="flex flex-wrap gap-3">
        <% family_values.each do |value| %>
          <label class="inline-flex items-center gap-2 px-3 py-2 border rounded-lg cursor-pointer hover:bg-gray-50 transition-colors">
            <%= check_box_tag "ritual[family_value_ids][]", value.id, ritual.family_value_ids.include?(value.id),
                class: "rounded border-gray-300",
                style: "color: #{colors[:primary]};" %>
            <span class="text-sm"><%= value.name %></span>
          </label>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Components / Steps -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between mb-4">
      <div>
        <h3 class="font-semibold text-gray-800">Ritual Steps</h3>
        <p class="text-sm text-gray-600">Break down your ritual into steps.</p>
      </div>
    </div>

    <div id="components-container" data-nested-form-target="container">
      <%= f.fields_for :components do |cf| %>
        <%= render "component_fields", f: cf, colors: colors %>
      <% end %>
    </div>

    <template data-nested-form-target="template">
      <%= f.fields_for :components, RitualComponent.new, child_index: "NEW_RECORD" do |cf| %>
        <%= render "component_fields", f: cf, colors: colors %>
      <% end %>
    </template>

    <button type="button"
            data-action="nested-form#add"
            class="mt-4 inline-flex items-center gap-2 px-4 py-2 border border-dashed border-gray-300 rounded-lg text-gray-600 hover:border-gray-400 hover:text-gray-700 transition-colors">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      Add Step
    </button>
  </div>

  <!-- Submit -->
  <div class="flex justify-end gap-3">
    <%= link_to "Cancel", ritual.persisted? ? family_ritual_path(family, ritual) : family_rituals_path(family),
        class: "px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50" %>
    <%= f.submit ritual.persisted? ? "Save Changes" : "Create Ritual",
        class: "px-6 py-2 rounded-lg font-medium text-white cursor-pointer hover:opacity-90 transition-opacity",
        style: "background-color: #{colors[:primary]};" %>
  </div>
<% end %>
