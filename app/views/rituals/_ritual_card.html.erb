<%#
  Ritual card for index and list displays.

  Required:
    ritual: Ritual object
    family: Family object
    colors: Theme colors hash
%>

<%= link_to family_ritual_path(family, ritual), class: "block" do %>
  <div class="bg-white rounded-lg shadow hover:shadow-md transition-shadow overflow-hidden h-full flex flex-col">
    <!-- Card Header -->
    <div class="p-4 border-b border-gray-100">
      <div class="flex items-start justify-between gap-2">
        <h4 class="font-semibold text-gray-800 line-clamp-1"><%= ritual.name %></h4>
        <% if !ritual.is_active %>
          <span class="text-xs px-2 py-0.5 rounded bg-gray-100 text-gray-500">Inactive</span>
        <% end %>
      </div>
      <% if ritual.description.present? %>
        <p class="text-sm text-gray-600 mt-1 line-clamp-2"><%= ritual.description %></p>
      <% end %>
    </div>

    <!-- Card Body -->
    <div class="p-4 flex-1">
      <!-- Metadata -->
      <div class="flex flex-wrap gap-2 text-xs">
        <% if ritual.frequency.present? %>
          <span class="inline-flex items-center gap-1 px-2 py-1 bg-blue-50 text-blue-700 rounded">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <%= ritual.frequency_label %>
          </span>
        <% end %>

        <% if ritual.components.any? %>
          <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 text-gray-600 rounded">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
            <%= ritual.components.count %> step<%= ritual.components.count == 1 ? '' : 's' %>
          </span>
        <% end %>

        <% if ritual.duration_display.present? %>
          <span class="inline-flex items-center gap-1 px-2 py-1 bg-purple-50 text-purple-700 rounded">
            <%= ritual.duration_display %>
          </span>
        <% end %>
      </div>

      <!-- Values -->
      <% if ritual.family_values.any? %>
        <div class="mt-3 flex flex-wrap gap-1">
          <% ritual.family_values.first(3).each do |value| %>
            <span class="text-xs px-2 py-0.5 rounded-full"
                  style="background-color: <%= colors[:secondary] %>20; color: <%= colors[:primary] %>;">
              <%= value.name %>
            </span>
          <% end %>
          <% if ritual.family_values.count > 3 %>
            <span class="text-xs text-gray-400">+<%= ritual.family_values.count - 3 %></span>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Card Footer -->
    <div class="px-4 py-3 bg-gray-50 border-t border-gray-100">
      <span class="text-sm font-medium" style="color: <%= colors[:primary] %>;">View Details &rarr;</span>
    </div>
  </div>
<% end %>
