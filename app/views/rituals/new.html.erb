<%
  colors = @family.theme_colors
%>

<div class="max-w-3xl mx-auto mt-10">
  <%= render "shared/back_link", path: family_rituals_path(@family), text: "Back to Rituals" %>

  <h2 class="text-2xl font-bold mb-2 mt-4" style="color: <%= colors[:primary] %>">Create a New Ritual</h2>
  <p class="text-gray-600 mb-6">Document a meaningful family tradition.</p>

  <%= render "form", ritual: @ritual, family: @family, family_values: @family_values %>
</div>
