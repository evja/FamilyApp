<%
  colors = @family.theme_colors
  member1 = @relationship.member_low
  member2 = @relationship.member_high
%>

<div class="max-w-2xl mx-auto mt-10">
  <%= render "shared/back_link", path: family_relationships_path(@family), text: "Back to Relationships" %>

  <h2 class="text-2xl font-bold mb-4 mt-4" style="color: <%= colors[:primary] %>">Relationship Assessment</h2>

  <!-- Prominent relationship header -->
  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <div class="flex items-center justify-center gap-4">
      <!-- Member 1 -->
      <div class="text-center">
        <div class="w-16 h-16 rounded-full flex items-center justify-center text-white text-xl font-bold mx-auto"
             style="background-color: <%= member1.parent_or_above? ? '#4F46E5' : '#10B981' %>">
          <%= member1.name.first.upcase %>
        </div>
        <p class="mt-2 font-semibold text-gray-800"><%= member1.name %></p>
        <p class="text-xs text-gray-500"><%= member1.display_role %></p>
      </div>

      <!-- Connection indicator -->
      <div class="flex flex-col items-center px-4">
        <div class="w-12 h-1 rounded" style="background-color: <%= colors[:primary] %>"></div>
        <span class="text-2xl my-1" style="color: <%= colors[:primary] %>">&#10084;</span>
        <div class="w-12 h-1 rounded" style="background-color: <%= colors[:primary] %>"></div>
      </div>

      <!-- Member 2 -->
      <div class="text-center">
        <div class="w-16 h-16 rounded-full flex items-center justify-center text-white text-xl font-bold mx-auto"
             style="background-color: <%= member2.parent_or_above? ? '#4F46E5' : '#10B981' %>">
          <%= member2.name.first.upcase %>
        </div>
        <p class="mt-2 font-semibold text-gray-800"><%= member2.name %></p>
        <p class="text-xs text-gray-500"><%= member2.display_role %></p>
      </div>
    </div>
    <p class="text-center text-sm text-gray-500 mt-4">How is the relationship between these two family members?</p>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <%= render "assessment_form", assessment: @assessment, relationship: @relationship %>

    <!-- Quick Issue Creation -->
    <% if module_unlocked?(:issues) %>
      <div class="mt-4 pt-4 border-t border-gray-100">
        <%= link_to new_family_issue_path(@family,
              prefill_description: "Relationship concern between #{@relationship.display_name}: ",
              member_ids: [@relationship.member_low_id, @relationship.member_high_id],
              list_type: 'individual',
              return_to: request.fullpath),
            class: "inline-flex items-center gap-2 text-sm font-medium px-3 py-2 rounded",
            style: "background-color: #{colors[:primary]}15; color: #{colors[:primary]};" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Create Issue for This Relationship
        <% end %>
      </div>
    <% end %>
  </div>

  <% if @recent_assessments.any? %>
    <div class="mt-6 bg-white rounded-lg shadow p-6">
      <h3 class="text-sm font-medium text-gray-600 mb-3">Recent Assessments</h3>
      <div class="space-y-2">
        <% @recent_assessments.each do |past| %>
          <div class="text-sm flex justify-between items-center bg-gray-50 p-2 rounded">
            <span><%= past.assessed_on.strftime("%b %d, %Y") %></span>
            <span class="font-medium <%= case past.total_score
                when 5..6 then 'text-green-600'
                when 3..4 then 'text-yellow-600'
                else 'text-red-600'
                end %>">
              <%= past.total_score %>/6 - <%= past.band_label %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
