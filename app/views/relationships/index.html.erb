<%
  colors = @family.theme_colors
%>

<div class="max-w-6xl mx-auto mt-10">
  <%= render "shared/back_link", path: family_path(@family), text: "Back to Dashboard" %>

  <h2 class="text-2xl font-bold mb-6 mt-4" style="color: <%= colors[:primary] %>">Family Relationships</h2>

  <% if @members.count < 2 %>
    <div class="bg-white p-8 rounded-lg shadow text-center">
      <p class="text-gray-600 mb-4">Add at least two family members to see relationships.</p>
      <%= link_to "Add Members", family_members_path(@family),
          class: "inline-block px-4 py-2 rounded transition-all duration-300",
          style: "background-color: #{colors[:primary]}; color: white;" %>
    </div>
  <% else %>
    <!-- Stats Cards -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
      <div class="bg-white p-4 rounded-lg shadow text-center">
        <div class="text-3xl font-bold" style="color: <%= colors[:primary] %>"><%= @total %></div>
        <div class="text-sm text-gray-600">Total</div>
      </div>
      <div class="bg-white p-4 rounded-lg shadow text-center">
        <div class="text-3xl font-bold text-green-600"><%= @healthy_count %></div>
        <div class="text-sm text-gray-600">High Functioning</div>
      </div>
      <div class="bg-white p-4 rounded-lg shadow text-center">
        <div class="text-3xl font-bold text-yellow-600"><%= @needs_attention_count %></div>
        <div class="text-sm text-gray-600">Needs Attention</div>
      </div>
      <div class="bg-white p-4 rounded-lg shadow text-center">
        <div class="text-3xl font-bold text-gray-400"><%= @unassessed_count %></div>
        <div class="text-sm text-gray-600">Not Assessed</div>
      </div>
    </div>

    <!-- Relationship Graph -->
    <div class="bg-white p-6 rounded-lg shadow mb-8">
      <div id="relationship-graph"
           data-controller="relationship-graph"
           data-relationship-graph-url-value="<%= graph_data_family_relationships_path(@family) %>"
           data-relationship-graph-family-id-value="<%= @family.id %>"
           class="w-full" style="height: 400px;">
        <div class="flex items-center justify-center h-full text-gray-400">
          Loading relationship map...
        </div>
      </div>
      <p class="text-center text-sm text-gray-500 mt-4">
        Click on a line to assess that relationship
      </p>
    </div>

    <!-- Relationship List -->
    <h3 class="text-xl font-semibold mb-4" style="color: <%= colors[:primary] %>">All Relationships</h3>
    <div class="bg-white rounded-lg shadow overflow-hidden overflow-x-auto">
      <table class="w-full min-w-[500px]">
        <thead class="bg-gray-50">
          <tr>
            <th class="text-left px-4 py-3 text-sm font-medium text-gray-600">Relationship</th>
            <th class="text-center px-4 py-3 text-sm font-medium text-gray-600">Health</th>
            <th class="text-center px-4 py-3 text-sm font-medium text-gray-600">Last Assessed</th>
            <th class="text-right px-4 py-3 text-sm font-medium text-gray-600">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @relationships.each do |relationship| %>
            <tr class="hover:bg-gray-50" id="relationship-row-<%= relationship.id %>">
              <td class="px-4 py-3">
                <span class="font-medium"><%= relationship.display_name %></span>
              </td>
              <td class="px-4 py-3 text-center">
                <% if relationship.assessed? %>
                  <span class="inline-block px-2 py-1 rounded text-sm font-medium
                    <%= case relationship.current_health_band
                        when 'high' then 'bg-green-100 text-green-800'
                        when 'functioning' then 'bg-yellow-100 text-yellow-800'
                        when 'low' then 'bg-red-100 text-red-800'
                        end %>">
                    <%= relationship.health_label %>
                  </span>
                <% else %>
                  <span class="text-gray-400 text-sm">Not Assessed</span>
                <% end %>
              </td>
              <td class="px-4 py-3 text-center text-sm text-gray-500">
                <% if relationship.last_assessed_at %>
                  <%= time_ago_in_words(relationship.last_assessed_at) %> ago
                <% else %>
                  -
                <% end %>
              </td>
              <td class="px-4 py-3 text-right">
                <%= link_to "Assess", assess_family_relationship_path(@family, relationship),
                    class: "text-sm font-medium hover:underline",
                    style: "color: #{colors[:primary]};" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <%= link_to "&larr; Back to Dashboard".html_safe, family_path(@family),
      class: "theme-button-outline text-sm mt-6 inline-block" %>
</div>
