<!DOCTYPE html>
<html>
  <head>
    <title>FamilyHub</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "theme", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://js.stripe.com/v3/"></script>
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.14/dist/cdn.min.js" defer></script>
  </head>

  <body class="font-sans" data-theme="<%= (defined?(@family) && @family&.theme.presence) || current_user&.active_family&.theme || 'default' %>">
    <header class="p-4 md:p-6 theme-header text-white" x-data="{ mobileMenu: false }">

      <div class="container mx-auto flex justify-between items-center">
        <% active_family = current_user&.active_family %>
        <% if user_signed_in? && active_family %>
          <!-- Left: Family Name + App Dropdown -->
          <div x-data="{ open: false }" class="relative text-white flex items-center gap-2">
            <button @click="open = !open" class="font-semibold text-white hover:underline text-sm md:text-base">
              <%= active_family.name %> - FamilyHub â–¼
            </button>

            <div x-show="open" x-transition @click.away="open = false" class="absolute left-0 top-full mt-2 w-56 bg-white rounded shadow-md z-50">
              <% if current_user.families.count > 1 %>
                <!-- Family Switcher Section -->
                <div class="px-4 py-2 bg-gray-50 border-b">
                  <span class="text-xs font-semibold text-gray-500 uppercase">Switch Family</span>
                </div>
                <% current_user.families.each do |fam| %>
                  <% member = current_user.member_in(fam) %>
                  <% is_current = fam.id == active_family.id %>
                  <% if is_current %>
                    <div class="block px-4 py-2 bg-gray-100 theme-text flex items-center justify-between">
                      <span class="font-medium"><%= fam.name %></span>
                      <span class="text-xs px-2 py-0.5 rounded-full bg-green-100 text-green-800">Current</span>
                    </div>
                  <% else %>
                    <%= button_to switch_family_path(fam), method: :post, class: "block w-full text-left px-4 py-2 hover:bg-gray-100 theme-text flex items-center justify-between" do %>
                      <span><%= fam.name %></span>
                      <span class="text-xs text-gray-500"><%= member&.display_role %></span>
                    <% end %>
                  <% end %>
                <% end %>
                <hr class="my-1">
              <% end %>

              <%= link_to "Settings", edit_user_registration_path, class: "block px-4 py-2 hover:bg-gray-100 theme-text" %>
              <%= link_to "Create New Family", new_family_path, class: "block px-4 py-2 hover:bg-gray-100 theme-text" %>
              <hr class="my-1">
              <%= button_to "Log Out", destroy_user_session_path,
                    method: :delete,
                    form: { class: "w-full" },
                    class: "block px-4 py-2 text-left hover:bg-gray-100 w-full theme-text" %>
            </div>
          </div>
        <% elsif user_signed_in? && !active_family %>
          <%= link_to "Create Family", new_family_path, class: "text-sm hover:underline" %>
          <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "text-sm hover:underline" %>
        <% else %>
          <%= link_to root_path, class: "text-xl md:text-2xl font-bold hover:underline" do %>
            FamilyHub
          <% end %>
        <% end %>

        <!-- Hamburger button (mobile) -->
        <button @click="mobileMenu = !mobileMenu" class="md:hidden p-2 rounded hover:bg-white/20">
          <svg x-show="!mobileMenu" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg x-show="mobileMenu" x-cloak xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

        <!-- Right: Nav Links (desktop) -->
        <nav class="hidden md:flex items-center gap-4">
          <% if user_signed_in? && current_user.admin? %>
            <%= link_to "Admin Dashboard", admin_dashboard_path, class: "hover:underline text-yellow-300 font-semibold" %>
          <% end %>
          <% if user_signed_in? && active_family %>
            <%= link_to "Dashboard", family_path(active_family), class: "hover:underline" %>

            <!-- Members Dropdown -->
            <div x-data="{ open: false }" class="relative">
              <button @click="open = !open" class="hover:underline flex items-center gap-1">
                Members
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div x-show="open" x-transition @click.away="open = false" class="absolute right-0 top-full mt-2 w-56 bg-white rounded-lg shadow-lg z-50 overflow-hidden">
                <div class="px-3 py-2 bg-gray-50 border-b flex items-center justify-between">
                  <span class="text-xs font-semibold text-gray-500 uppercase">Family</span>
                  <%= link_to new_family_member_path(active_family), class: "text-xs px-2 py-0.5 rounded bg-gray-200 hover:bg-gray-300 text-gray-700" do %>
                    + Add
                  <% end %>
                </div>
                <div class="max-h-56 overflow-y-auto">
                  <% active_family.members.includes(:user).order(:role, :name).each do |member| %>
                    <%= link_to family_member_path(active_family, member), class: "flex items-center gap-2 px-3 py-2 hover:bg-gray-50 border-b border-gray-100 last:border-0" do %>
                      <div class="w-7 h-7 rounded-full flex items-center justify-center text-xs font-medium text-white flex-shrink-0" style="background-color: <%= member.display_color %>;">
                        <%= member.avatar_display %>
                      </div>
                      <div class="flex-1 min-w-0">
                        <div class="text-sm font-medium text-gray-900 truncate"><%= member.display_name %></div>
                      </div>
                      <% if member.user_id == current_user.id %>
                        <span class="text-xs text-blue-600">You</span>
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
                <div class="px-3 py-2 bg-gray-50 border-t">
                  <%= link_to family_members_path(active_family), class: "text-xs text-gray-600 hover:text-gray-900 hover:underline" do %>
                    Manage members &rarr;
                  <% end %>
                </div>
              </div>
            </div>

            <%= link_to "Help", about_path, class: "hover:underline" %>

            <% unless current_user.is_subscribed? %>
              <%= button_to checkout_path, method: :post, class: "bg-white/20 hover:bg-white/30 px-3 py-1 rounded text-sm font-medium transition-colors" do %>
                Subscribe
              <% end %>
            <% end %>
          <% else %>
            <%= link_to "Home", root_path, class: "hover:underline" %>
            <%= link_to "About", about_path, class: "hover:underline" %>
          <% end %>
          <% unless user_signed_in? %>
            <%= link_to "Sign Up", new_user_registration_path, class: "hover:underline" %>
            <%= link_to "Log In", new_user_session_path, class: "hover:underline" %>
            <%= button_to "Subscribe to FamilyHub", checkout_path, method: :post, class: "theme-button px-4 py-2 rounded" %>
          <% end %>
        </nav>
      </div>

      <!-- Mobile menu dropdown -->
      <div x-show="mobileMenu" x-cloak x-transition class="md:hidden mt-4 pt-4 border-t border-white/20">
        <nav class="flex flex-col gap-3">
          <% if user_signed_in? && current_user.admin? %>
            <%= link_to "Admin Dashboard", admin_dashboard_path, class: "hover:underline text-yellow-300 font-semibold py-1" %>
          <% end %>
          <% if user_signed_in? && active_family %>
            <%= link_to "Dashboard", family_path(active_family), class: "hover:underline py-1" %>
            <%= link_to "Members", family_members_path(active_family), class: "hover:underline py-1" %>
            <%= link_to "Settings", edit_user_registration_path, class: "hover:underline py-1" %>
            <%= link_to "Help", about_path, class: "hover:underline py-1" %>
            <% unless current_user.is_subscribed? %>
              <%= button_to checkout_path, method: :post, class: "bg-white/20 hover:bg-white/30 px-4 py-2 rounded font-medium transition-colors text-center" do %>
                Subscribe
              <% end %>
            <% end %>
          <% else %>
            <%= link_to "Home", root_path, class: "hover:underline py-1" %>
            <%= link_to "About", about_path, class: "hover:underline py-1" %>
          <% end %>
          <% unless user_signed_in? %>
            <%= link_to "Sign Up", new_user_registration_path, class: "hover:underline py-1" %>
            <%= link_to "Log In", new_user_session_path, class: "hover:underline py-1" %>
            <%= button_to "Subscribe to FamilyHub", checkout_path, method: :post, class: "theme-button px-4 py-2 rounded w-full text-center" %>
          <% end %>
        </nav>
      </div>
    </header>

    <% if viewing_as_user? %>
      <div class="bg-indigo-100 border-b border-indigo-300 text-indigo-800 text-center py-2 px-4 text-sm font-medium">
        Viewing as regular user
        <%= button_to "Exit", toggle_view_as_user_path, method: :post, class: "ml-3 bg-indigo-600 hover:bg-indigo-700 text-white px-3 py-1 rounded text-xs font-semibold" %>
      </div>
    <% end %>

    <main class="container mx-auto px-4 py-6 md:py-10">
      <% if notice %>
        <div class="mb-4 p-3 bg-green-50 border border-green-200 text-green-700 rounded text-sm"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="mb-4 p-3 bg-red-50 border border-red-200 text-red-700 rounded text-sm"><%= alert %></div>
      <% end %>
      <%= yield %>
    </main>

    <!-- Global modal frame -->
    <%= turbo_frame_tag "modal" %>
  </body>
</html>
