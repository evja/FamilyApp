<div class="max-w-md mx-auto mt-12 p-8 bg-white shadow rounded">
  <h2 class="text-2xl font-bold mb-6 text-center">Edit Family Name</h2>

  <%= form_with model: @family, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :name, class: "block mb-2 font-semibold" %>
      <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded" %>
    </div>

    <%= form.submit "Update", class: "w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition" %>
  <% end %>
<%= link_to "Cancel", family_path(@family), class: "text-sm text-blue-600 hover:underline mt-4 inline-block" %>
</div>