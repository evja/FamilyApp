<%
  colors = @family.theme_colors
%>

<div class="max-w-6xl mx-auto mt-12 px-6">
  <div class="flex justify-between items-center mb-8">
    <h2 class="text-3xl font-bold" style="color: <%= colors[:primary] %>">
      Welcome to the <%= @family.name %> Family Dashboard
    </h2>
    
    <div class="flex gap-4">
      <% unless current_user.is_subscribed? %>
        <%= button_to "Subscribe to FamilyHub", 
            checkout_path, 
            method: :post, 
            class: "px-4 py-2 rounded transition-all duration-300",
            style: "background-color: #{colors[:primary]}; color: white; hover:background-color: #{colors[:secondary]};" %>
      <% end %>
      
      <%= link_to new_family_family_invitation_path(@family),
          class: "flex items-center gap-2 px-4 py-2 rounded border transition-all duration-300",
          style: "border-color: #{colors[:primary]}; color: #{colors[:primary]}; hover:background-color: #{colors[:primary]}; hover:color: white;" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
        </svg>
        Invite Family Member
      <% end %>
    </div>
  </div>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    <% dashboard_items = [
      { label: "Rhythms", icon: "repeat", path: family_issues_path(@family), status: :soon },
      { label: "Responsibilities", icon: "check-square", path: family_issues_path(@family), status: :soon },
      { label: "Issues", icon: "alert-circle", path: family_issues_path(@family), status: :active },
      { label: "Rituals", icon: "mountain", path: family_issues_path(@family), status: :soon },
      { label: "Vision", icon: "eye", path: family_issues_path(@family), status: :soon },
      { label: "Relationships", icon: "heart", path: family_issues_path(@family), status: :soon }
    ] %>

    <% dashboard_items.each do |item| %>
      <% bg_class = case item[:status]
        when :done then "bg-green-100"
        when :active then "bg-orange-100"
        when :soon then "bg-gray-100"
      end %>

      <% if current_user.admin? || current_user.is_subscribed? || item[:label] == "Issues" %>
        <%= link_to item[:path], class: "block #{bg_class} shadow rounded-lg p-6 hover:shadow-2xl hover:scale-105 hover:-translate-y-1 transition-all duration-300 ease-in-out group", 
            style: "hover:border: 2px solid #{colors[:primary]};" do %>
          <div class="flex flex-col items-start gap-3">
            <div class="p-2 rounded-full bg-white shadow-sm group-hover:bg-opacity-50 transition-colors duration-300"
                 style="color: <%= colors[:primary] %>; group-hover:background-color: <%= colors[:secondary] %>;">
              <svg data-lucide="<%= item[:icon] %>" class="w-6 h-6 transition-colors duration-300"
                   style="group-hover:color: <%= colors[:primary] %>;"></svg>
            </div>
            <h3 class="text-xl font-semibold transition-colors duration-300"
                style="color: <%= colors[:primary] %>; group-hover:color: <%= colors[:secondary] %>;"><%= item[:label] %></h3>
            <p class="text-gray-600 text-sm group-hover:text-opacity-75 transition-colors duration-300">Manage your family's <%= item[:label].downcase %>.</p>
          </div>
        <% end %>
      <% elsif item[:path] == "#" %>
        <div class="<%= bg_class %> shadow rounded-lg p-6 flex flex-col items-start gap-3">
          <div class="p-2 rounded-full bg-white shadow-sm" style="color: <%= colors[:primary] %>;">
            <svg data-lucide="<%= item[:icon] %>" class="w-6 h-6"></svg>
          </div>
          <h3 class="text-xl font-semibold" style="color: <%= colors[:primary] %>;"><%= item[:label] %></h3>
          <p class="text-gray-600 text-sm">Manage your family's <%= item[:label].downcase %>.</p>
          <span class="mt-auto text-gray-500 text-sm italic">Coming soon</span>
        </div>
      <% else %>
        <div class="<%= bg_class %> shadow rounded-lg p-6 flex flex-col items-start gap-3">
          <div class="p-2 rounded-full bg-white shadow-sm" style="color: <%= colors[:primary] %>;">
            <svg data-lucide="<%= item[:icon] %>" class="w-6 h-6"></svg>
          </div>
          <h3 class="text-xl font-semibold" style="color: <%= colors[:primary] %>;"><%= item[:label] %></h3>
          <p class="text-gray-600 text-sm">Manage your family's <%= item[:label].downcase %>.</p>
          <span class="mt-auto text-sm font-medium" style="color: <%= colors[:secondary] %>;">Subscribe to unlock</span>
        </div>
      <% end %>
    <% end %>
  </div>

  <% if @family.invitations.pending.any? %>
    <div class="mt-12">
      <h3 class="text-xl font-semibold mb-4" style="color: <%= colors[:primary] %>">Pending Invitations</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @family.invitations.pending.each do |invitation| %>
          <div class="bg-white p-4 rounded-lg shadow border" style="border-color: <%= colors[:secondary] %>;">
            <div class="flex justify-between items-start">
              <div>
                <p class="font-medium"><%= invitation.email %></p>
                <p class="text-sm text-gray-500">
                  Expires in <%= time_ago_in_words(invitation.expires_at) %>
                </p>
              </div>
              <%= button_to family_family_invitation_path(@family, invitation),
                  method: :delete,
                  class: "text-sm text-red-600 hover:underline",
                  data: { confirm: "Cancel this invitation?" } do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const icons = document.querySelectorAll("[data-lucide]");
    if (window.lucide) {
      icons.forEach(icon => window.lucide.createIcons({
        icons: {
          [icon.dataset.lucide]: {
            element: icon
          }
        }
      }));
    }
  });
</script>