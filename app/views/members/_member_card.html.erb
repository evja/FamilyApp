<%
  colors = @family.theme_colors
  member_color = member.display_color
%>

<%= link_to family_member_path(@family, member), class: "block hover:no-underline" do %>
  <div class="flex flex-col items-center text-center bg-white shadow rounded-lg p-4 hover:shadow-lg transition border" style="border-color: <%= member_color %>30;">
    <!-- Profile Circle -->
    <div class="w-24 h-24 rounded-full flex items-center justify-center text-2xl font-semibold mb-3"
         style="background-color: <%= member_color %>; color: white;">
      <%= member.avatar_display %>
    </div>

    <!-- Name & Age -->
    <div>
      <h3 class="text-lg font-bold" style="color: <%= member_color %>"><%= member.display_name %></h3>
      <p class="text-sm text-gray-600">Age: <%= member.age %></p>
      <% if member.is_parent %>
        <p class="text-xs font-medium mt-1" style="color: <%= member_color %>">Parent</p>
      <% else %>
        <p class="text-xs font-medium mt-1" style="color: <%= member_color %>">Child</p>
      <% end %>
    </div>
  </div>
<% end %>
