<%
  colors = @family.theme_colors
%>

<%= link_to family_member_path(@family, member), class: "block hover:no-underline" do %>
  <div class="flex flex-col items-center text-center bg-white shadow rounded-lg p-4 hover:shadow-lg transition border" style="border-color: <%= colors[:secondary] %>;">
    <!-- Profile Circle Placeholder -->
    <div class="w-24 h-24 rounded-full flex items-center justify-center text-2xl font-semibold mb-3"
         style="background-color: <%= colors[:background] %>; color: <%= colors[:primary] %>;">
      <%= member.name[0].upcase %>
    </div>

    <!-- Name & Age -->
    <div>
      <h3 class="text-lg font-bold" style="color: <%= colors[:primary] %>"><%= member.name %></h3>
      <p class="text-sm text-gray-600">Age: <%= member.age %></p>
      <% if member.is_parent %>
        <p class="text-xs font-medium mt-1" style="color: <%= colors[:secondary] %>">Parent</p>
      <% end %>
    </div>
  </div>
<% end %>