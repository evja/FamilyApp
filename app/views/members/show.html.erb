<%
  colors = @family.theme_colors
  role_label = @member.role.in?(%w[admin_parent parent]) ? "Parent" : @member.role&.titleize
%>

<div class="max-w-2xl mx-auto" x-data="{ confirmDelete: false }">
  <%= render "shared/back_link", path: family_members_path(@family), text: "Back to Members" %>

  <!-- Member Card -->
  <div class="bg-white shadow-lg rounded-lg border overflow-hidden" style="border-color: <%= colors[:secondary] %>;">
    <!-- Header with avatar -->
    <div class="p-6 pb-4" style="background: linear-gradient(135deg, <%= colors[:background] %> 0%, white 100%);">
      <div class="flex items-center gap-5">
        <div class="w-24 h-24 rounded-full flex items-center justify-center text-4xl font-bold shadow-md border-4 border-white"
             style="background-color: <%= colors[:primary] %>; color: white;">
          <%= @member.name[0].upcase %>
        </div>
        <div class="flex-1">
          <h1 class="text-2xl font-bold" style="color: <%= colors[:primary] %>"><%= @member.name %></h1>
          <span class="inline-block mt-2 px-3 py-1 text-sm font-medium rounded-full"
                style="background-color: <%= colors[:background] %>; color: <%= colors[:primary] %>;">
            <%= role_label %>
          </span>
        </div>
      </div>
    </div>

    <!-- Details -->
    <div class="px-6 py-4 border-t" style="border-color: <%= colors[:background] %>;">
      <div class="grid grid-cols-2 gap-4">
        <div>
          <p class="text-xs text-gray-500 uppercase tracking-wide">Age</p>
          <p class="text-lg font-medium text-gray-800"><%= @member.age || "â€”" %></p>
        </div>
        <% if @member.birthdate.present? %>
          <div>
            <p class="text-xs text-gray-500 uppercase tracking-wide">Birthday</p>
            <p class="text-lg font-medium text-gray-800"><%= @member.birthdate.strftime("%B %d, %Y") %></p>
          </div>
        <% end %>
        <% if @member.email.present? %>
          <div class="col-span-2">
            <p class="text-xs text-gray-500 uppercase tracking-wide">Email</p>
            <p class="text-lg font-medium text-gray-800"><%= @member.email %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Actions -->
    <div class="px-6 py-4 bg-gray-50 border-t flex items-center gap-3" style="border-color: <%= colors[:background] %>;">
      <%= link_to edit_family_member_path(@family, @member),
          class: "inline-flex items-center gap-2 px-4 py-2 rounded font-medium text-white transition-all hover:opacity-90",
          style: "background-color: #{colors[:primary]};" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit Member
      <% end %>

      <% unless @member.admin_parent? %>
        <button @click="confirmDelete = true"
                class="inline-flex items-center gap-2 px-4 py-2 rounded font-medium border border-red-300 text-red-600 bg-white hover:bg-red-50 transition-all">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          Delete
        </button>
      <% end %>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div
    x-show="confirmDelete"
    x-cloak
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    class="fixed inset-0 z-50 bg-black bg-opacity-50 flex items-center justify-center p-4"
    @click.self="confirmDelete = false"
  >
    <div
      x-show="confirmDelete"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 scale-95"
      x-transition:enter-end="opacity-100 scale-100"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100 scale-100"
      x-transition:leave-end="opacity-0 scale-95"
      class="bg-white rounded-lg shadow-xl p-6 w-full max-w-md"
    >
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900">Delete Member?</h2>
      </div>
      <p class="text-gray-600 mb-6">
        This will permanently remove <strong class="text-gray-900"><%= @member.name %></strong> from your family. This action cannot be undone.
      </p>
      <div class="flex justify-end gap-3">
        <button @click="confirmDelete = false"
                class="px-4 py-2 rounded font-medium border border-gray-300 text-gray-700 bg-white hover:bg-gray-50 transition-all">
          Cancel
        </button>
        <%= button_to "Delete Member", family_member_path(@family, @member),
              method: :delete,
              class: "px-4 py-2 rounded font-medium bg-red-600 text-white hover:bg-red-700 transition-all" %>
      </div>
    </div>
  </div>
</div>
