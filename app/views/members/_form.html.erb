<%= form_with model: [@family, @member], local: true do |form| %>
  <div class="grid gap-6">

    <% if @member.errors.any? %>
      <div class="text-red-600 text-sm">
        <h3 class="font-semibold mb-2">Please fix the following:</h3>
        <ul class="list-disc ml-5">
          <% @member.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, "Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :age, "Age", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :age, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :personality, "Personality", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :personality, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :health, "Health Notes", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :health, rows: 2, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :interests, "Interests", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :interests, rows: 2, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :needs, "Needs", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :needs, rows: 2, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="flex items-center gap-4 mt-4">
      <%= form.submit class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
      <%= link_to "Cancel", family_members_path(@family), class: "text-sm text-blue-600 hover:underline" %>
    </div>

  </div>
<% end %>