<div class="max-w-6xl mx-auto mt-10">
  <h2 class="text-2xl font-bold mb-6">Family Members</h2>

  <%= link_to "+ Add Member", new_family_member_path(@family), class: "mb-6 inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>

  <h3 class="text-xl font-semibold mb-4">Parents</h3>
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6 mb-10">
    <% @members.select(&:is_parent).each do |member| %>
      <%= render "member_card", member: member %>
    <% end %>
  </div>

  <h3 class="text-xl font-semibold mb-4">Children</h3>
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6">
    <% @members.reject(&:is_parent).each do |member| %>
      <%= render "member_card", member: member %>
    <% end %>
  </div>
</div>