<div class="max-w-6xl mx-auto mt-10">
  <h2 class="text-2xl font-bold mb-6">Family Members</h2>

  <%= link_to "Add New Member", new_family_member_path(@family), class: "mb-6 inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>

  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6">
    <% @members.each do |member| %>
      <div class="flex flex-col items-center text-center bg-white shadow rounded-lg p-4 hover:shadow-lg transition">
        <!-- Profile Circle Placeholder -->
        <div class="w-24 h-24 rounded-full bg-gray-200 flex items-center justify-center text-2xl font-semibold text-gray-500 mb-3">
          <%= member.name[0].upcase %>
        </div>

        <!-- Name & Age -->
        <div>
          <h3 class="text-lg font-bold"><%= member.name %></h3>
          <p class="text-sm text-gray-600">Age: <%= member.age %></p>
        </div>

        <%= link_to "View", family_member_path(@family, member), class: "mt-2 text-blue-600 hover:underline text-sm" %>
      </div>
    <% end %>
  </div>
</div>