<%
  colors = @family.theme_colors
  level = @maturity_level
%>

<div class="max-w-4xl mx-auto mt-10">
  <%= render "shared/back_link", path: family_maturity_levels_path(@family), text: "Back to Maturity Chart" %>

  <!-- Level Header -->
  <div class="bg-white rounded-lg shadow overflow-hidden mt-4 mb-8">
    <div class="p-8 border-l-4" style="border-left-color: <%= level.color_code %>; background: linear-gradient(to right, <%= level.color_code %>15, transparent);">
      <div class="flex items-start justify-between flex-wrap gap-4">
        <div>
          <h2 class="text-3xl font-bold" style="color: <%= level.color_code %>;">
            <%= level.name %>
          </h2>
          <p class="text-lg text-gray-600 mt-2"><%= level.description %></p>
        </div>
        <div class="text-right">
          <div class="text-sm text-gray-500 uppercase tracking-wide">Age Range</div>
          <div class="text-2xl font-bold text-gray-700">
            <%= level.age_min %> - <%= level.age_max %>
          </div>
        </div>
      </div>

      <% if @members_at_level.any? %>
        <div class="mt-6 pt-6 border-t border-gray-200">
          <div class="text-sm text-gray-500 uppercase tracking-wide mb-3">Your Family Members at This Level</div>
          <div class="flex flex-wrap gap-3">
            <% @members_at_level.each do |member| %>
              <%= link_to family_member_path(@family, member),
                  class: "inline-flex items-center gap-2 px-4 py-2 bg-white rounded-lg shadow-sm hover:shadow transition-shadow" do %>
                <span class="text-xl"><%= member.avatar_emoji || "ðŸ‘¤" %></span>
                <div>
                  <div class="font-medium text-gray-800"><%= member.name %></div>
                  <div class="text-xs text-gray-500">Age <%= member.age %></div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Expected Behaviors -->
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="p-6 border-b border-gray-100">
      <h3 class="text-xl font-bold text-gray-800 flex items-center gap-2">
        <svg class="w-6 h-6" style="color: <%= level.color_code %>;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Expected Behaviors
      </h3>
      <p class="text-gray-600 text-sm mt-1">What children at this level should be able to do independently or with minimal supervision.</p>
    </div>
    <div class="p-6">
      <div class="grid md:grid-cols-2 gap-6">
        <% @behaviors_by_category.each do |category, behaviors| %>
          <div class="bg-gray-50 rounded-lg p-4">
            <h4 class="font-semibold text-gray-800 mb-3 flex items-center gap-2">
              <span class="w-3 h-3 rounded-full" style="background-color: <%= level.color_code %>;"></span>
              <%= MaturityBehavior::CATEGORY_LABELS[category] || category.titleize %>
            </h4>
            <ul class="space-y-2">
              <% behaviors.each do |behavior| %>
                <li class="flex items-start gap-3 text-sm">
                  <svg class="w-4 h-4 mt-0.5 flex-shrink-0 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700"><%= behavior.description %></span>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Privileges & Freedoms -->
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="p-6 border-b border-gray-100">
      <h3 class="text-xl font-bold text-gray-800 flex items-center gap-2">
        <svg class="w-6 h-6" style="color: <%= level.color_code %>;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
        </svg>
        Privileges & Freedoms
      </h3>
      <p class="text-gray-600 text-sm mt-1">Privileges earned through demonstrated maturity and responsibility.</p>
    </div>
    <div class="divide-y divide-gray-100">
      <% @maturity_level.privileges.ordered.each do |privilege| %>
        <div class="p-4 flex items-center justify-between hover:bg-gray-50">
          <div>
            <span class="inline-block px-2 py-1 text-xs font-medium uppercase tracking-wide rounded"
                  style="background-color: <%= level.color_code %>15; color: <%= level.color_code %>;">
              <%= MaturityPrivilege::CATEGORY_LABELS[privilege.category] || privilege.category&.titleize %>
            </span>
            <div class="text-gray-800 mt-1"><%= privilege.description %></div>
          </div>
          <% if privilege.value.present? %>
            <div class="text-lg font-bold ml-4 px-3 py-1 rounded-lg"
                 style="background-color: <%= level.color_code %>20; color: <%= level.color_code %>;">
              <%= privilege.value %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Navigation -->
  <div class="flex justify-between items-center mt-8">
    <%= link_to "&larr; Back to Maturity Chart".html_safe, family_maturity_levels_path(@family),
        class: "theme-button-outline text-sm" %>
  </div>
</div>
