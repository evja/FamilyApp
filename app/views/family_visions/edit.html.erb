<h1 class="text-3xl font-bold mb-6" style="color: <%= @colors[:primary] %>;">
  Craft Your Family Vision
</h1>

<%= form_with model: @vision, url: family_vision_path(@family), method: :patch, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :mission_statement, "Mission Statement", class: "block font-semibold mb-1", style: "color: #{@colors[:primary]};" %>
    <%= f.text_area :mission_statement, rows: 5, class: "w-full p-3 rounded border", style: "border-color: #{@colors[:primary]};" %>
  </div>

  <div class="mb-4">
    <%= f.label :notes, "Vision Notes (optional)", class: "block font-semibold mb-1", style: "color: #{@colors[:primary]};" %>
    <%= f.text_area :notes, rows: 4, class: "w-full p-3 rounded border", style: "border-color: #{@colors[:primary]};" %>
  </div>

  <%= f.submit "Save Vision", class: "px-4 py-2 rounded text-white font-semibold", style: "background-color: #{@colors[:primary]};" %>
<% end %>