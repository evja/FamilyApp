<%
  colors = @family.theme_colors
  progress = @completion.progress_percentage
%>

<div class="max-w-3xl mx-auto">
  <%= render "shared/back_link", path: family_rhythms_path(@family), text: "Exit Meeting" %>

  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center justify-between mb-2">
      <h2 class="text-2xl font-bold theme-text"><%= @rhythm.name %></h2>
      <div class="flex items-center gap-3">
        <% if module_unlocked?(:issues) %>
          <%= link_to new_family_issue_path(@family,
                prefill_description: "Issue from #{@rhythm.name} meeting: ",
                return_to: run_family_rhythm_path(@family, @rhythm)),
              class: "inline-flex items-center gap-1 text-sm font-medium px-3 py-1.5 rounded border transition-all hover:shadow-sm",
              style: "border-color: #{colors[:secondary]}; color: #{colors[:primary]};" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Log Issue
          <% end %>
        <% end %>
        <span class="text-sm font-medium" style="color: <%= colors[:primary] %>;">
          <%= @completion.checked_count %>/<%= @completion.total_count %> complete
        </span>
      </div>
    </div>

    <!-- Progress Bar -->
    <div class="w-full bg-gray-200 rounded-full h-3">
      <div class="h-3 rounded-full transition-all duration-300" style="width: <%= progress %>%; background-color: <%= colors[:primary] %>;"></div>
    </div>
  </div>

  <!-- Checklist -->
  <div class="bg-white rounded-lg shadow border theme-border overflow-hidden divide-y theme-border">
    <% @completion_items.each do |item| %>
      <%= render "completion_item", item: item, family: @family %>
    <% end %>
  </div>

  <!-- Actions -->
  <%= render "rhythm_actions", completion: @completion, family: @family, rhythm: @rhythm %>

  <!-- Tips -->
  <div class="mt-8 p-4 bg-gray-50 rounded-lg text-sm text-gray-600">
    <strong>Tips:</strong>
    <ul class="list-disc list-inside mt-2 space-y-1">
      <li>Click each item to mark it complete</li>
      <li>Use the link buttons to open related sections in a new tab</li>
      <li>Your progress is saved automatically - you can leave and come back</li>
    </ul>
  </div>
</div>
