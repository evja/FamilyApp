<%
  colors = @family.theme_colors
%>

<div class="max-w-5xl mx-auto mt-10">
  <%= render "shared/back_link", path: family_rhythms_path(@family), text: "Back to Rhythms" %>

  <div class="flex items-center justify-between flex-wrap gap-4 mt-4 mb-6">
    <div>
      <h2 class="text-2xl font-bold" style="color: <%= colors[:primary] %>">Rhythm Templates</h2>
      <p class="text-gray-600 text-sm mt-1">Pre-built meeting templates to get your family rhythms started quickly.</p>
    </div>
    <%= link_to new_family_rhythm_path(@family),
        class: "btn-secondary text-sm" do %>
      Create Custom Rhythm
    <% end %>
  </div>

  <!-- Category Sections -->
  <% @category_labels.each do |category_key, category_label| %>
    <% templates_in_category = @templates_by_category[category_key] || [] %>
    <% next if templates_in_category.empty? %>

    <div class="mb-8">
      <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
        <span class="w-3 h-3 rounded-full" style="background-color: <%= colors[:primary] %>;"></span>
        <%= category_label %>
        <span class="text-sm font-normal text-gray-500">(<%= templates_in_category.count %>)</span>
      </h3>

      <div class="grid md:grid-cols-2 gap-4">
        <% templates_in_category.each do |template| %>
          <% already_added = @existing_rhythm_names.include?(template[:name]) %>

          <div class="bg-white rounded-lg shadow overflow-hidden border <%= already_added ? 'border-green-200 bg-green-50' : 'border-gray-200' %>">
            <div class="p-5">
              <!-- Header -->
              <div class="flex items-start justify-between gap-3 mb-3">
                <h4 class="font-semibold text-gray-800"><%= template[:name] %></h4>
                <% if already_added %>
                  <span class="flex-shrink-0 inline-flex items-center gap-1 px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-700">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    Added
                  </span>
                <% end %>
              </div>

              <!-- Description -->
              <p class="text-sm text-gray-600 mb-4"><%= template[:description] %></p>

              <!-- Metadata -->
              <div class="flex flex-wrap gap-2 text-xs mb-4">
                <span class="inline-flex items-center gap-1 px-2 py-1 bg-blue-50 text-blue-700 rounded">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <%= Rhythm::FREQUENCY_LABELS[template[:frequency_type]] %>
                </span>
                <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 text-gray-600 rounded">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                  </svg>
                  <%= template[:agenda_items].size %> agenda items
                </span>
                <% total_duration = template[:agenda_items].sum { |i| i[:duration_minutes] || 0 } %>
                <% if total_duration > 0 %>
                  <span class="inline-flex items-center gap-1 px-2 py-1 bg-purple-50 text-purple-700 rounded">
                    <% if total_duration >= 60 %>
                      <%= (total_duration / 60.0).round(1) %> hrs
                    <% else %>
                      <%= total_duration %> min
                    <% end %>
                  </span>
                <% end %>
              </div>

              <!-- Agenda Preview -->
              <div class="border-t border-gray-100 pt-3 mb-4">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-2">Agenda Preview</p>
                <ul class="text-sm text-gray-600 space-y-1">
                  <% template[:agenda_items].first(4).each_with_index do |item, index| %>
                    <li class="flex items-start gap-2">
                      <span class="text-gray-400"><%= index + 1 %>.</span>
                      <span class="truncate"><%= item[:title] %></span>
                      <% if item[:duration_minutes] %>
                        <span class="text-gray-400 text-xs whitespace-nowrap">(<%= item[:duration_minutes] %>m)</span>
                      <% end %>
                    </li>
                  <% end %>
                  <% remaining = template[:agenda_items].size - 4 %>
                  <% if remaining > 0 %>
                    <li class="text-gray-400 text-sm">+ <%= remaining %> more...</li>
                  <% end %>
                </ul>
              </div>

              <!-- Action -->
              <% if already_added %>
                <div class="text-sm text-gray-500 text-center py-2">
                  This template is already in your rhythms
                </div>
              <% else %>
                <%= button_to family_rhythms_path(@family),
                    method: :post,
                    params: { template_name: template[:name] },
                    class: "w-full px-4 py-2 rounded-lg font-medium text-white transition-colors hover:opacity-90",
                    style: "background-color: #{colors[:primary]};" do %>
                  Add This Rhythm
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Bottom Actions -->
  <div class="flex justify-between items-center mt-8 pt-6 border-t border-gray-200">
    <%= link_to "&larr; Back to Rhythms".html_safe, family_rhythms_path(@family),
        class: "theme-button-outline text-sm" %>
    <%= link_to "Create Custom Rhythm", new_family_rhythm_path(@family),
        class: "btn-primary text-sm" %>
  </div>
</div>
