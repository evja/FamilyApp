<%#
  Standard page header with title, optional subtitle, back link, and action buttons.

  Required:
    title: String - The page title
    back_path: Path - Where the back link goes

  Optional:
    back_text: String - Back link text (default: "Back to Dashboard")
    subtitle: String - Subtitle below title
    actions: Block - Action buttons (captured via yield)
    colors: Hash - Theme colors (default: @family.theme_colors)
%>
<% colors ||= @family.theme_colors %>
<% back_text ||= "Back to Dashboard" %>

<div class="mb-6">
  <%= render "shared/back_link", path: back_path, text: back_text %>

  <div class="flex flex-wrap items-center justify-between gap-4 mt-4">
    <div>
      <h1 class="text-2xl font-bold theme-text"><%= title %></h1>
      <% if local_assigns[:subtitle] %>
        <p class="text-gray-600 mt-1"><%= subtitle %></p>
      <% end %>
    </div>

    <% if content_for?(:page_actions) %>
      <div class="flex flex-wrap gap-3">
        <%= yield :page_actions %>
      </div>
    <% end %>
  </div>
</div>
