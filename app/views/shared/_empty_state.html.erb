<%#
  Standard empty state with icon, headline, description, and CTA.

  Required:
    title: String - Main headline
    description: String - Supporting text
    action_path: Path - CTA button destination
    action_text: String - CTA button text

  Optional:
    icon: String - Heroicon path data (default: sun icon)
    examples: Array - List of example items to show
    examples_label: String - Label for examples (default: "Examples:")
    colors: Hash - Theme colors
%>
<% colors ||= @family.theme_colors %>

<div class="max-w-xl mx-auto text-center py-12">
  <div class="bg-white p-8 rounded-lg shadow border" style="border-color: <%= colors[:secondary] %>;">
    <!-- Icon -->
    <div class="mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: <%= colors[:primary] %>;">
        <% if local_assigns[:icon] %>
          <%= icon.html_safe %>
        <% else %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        <% end %>
      </svg>
    </div>

    <!-- Headline -->
    <h3 class="text-xl font-semibold mb-2" style="color: <%= colors[:primary] %>;"><%= title %></h3>

    <!-- Description -->
    <p class="text-gray-600 mb-6"><%= description %></p>

    <!-- Examples (optional) -->
    <% if local_assigns[:examples] && examples.present? %>
      <div class="text-left mb-6 bg-gray-50 rounded-lg p-4">
        <p class="text-sm font-medium text-gray-700 mb-2"><%= examples_label || "Examples:" %></p>
        <ul class="text-sm text-gray-600 space-y-1">
          <% examples.each do |example| %>
            <li><%= example %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- CTA Button -->
    <%= link_to action_text, action_path,
        class: "inline-block px-6 py-3 rounded-lg font-medium text-white transition-all hover:opacity-90",
        style: "background-color: #{colors[:primary]};" %>
  </div>
</div>
