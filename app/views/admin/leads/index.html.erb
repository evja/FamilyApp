<div class="max-w-6xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Leads Dashboard</h1>
    <div class="flex gap-3">
      <%= link_to admin_dashboard_path, class: "text-sm text-gray-600 hover:underline flex items-center gap-1" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Dashboard
      <% end %>
      <%= link_to "Export CSV", export_admin_leads_path(filter: @filter), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 text-sm" %>
    </div>
  </div>

  <%# Stats Cards %>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-3xl font-bold text-gray-900"><%= @total_count %></div>
      <div class="text-sm text-gray-500">Total Leads</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-3xl font-bold text-orange-500"><%= @hot_count %></div>
      <div class="text-sm text-gray-500">Hot Leads</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-3xl font-bold text-green-600"><%= @survey_completed_count %></div>
      <div class="text-sm text-gray-500">Surveys Completed</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-3xl font-bold text-blue-600"><%= ((Lead.count.to_f / 500) * 100).round(1) %>%</div>
      <div class="text-sm text-gray-500">Progress to 500</div>
    </div>
  </div>

  <%# Filter Tabs %>
  <div class="flex gap-2 mb-4 border-b border-gray-200">
    <%= link_to admin_leads_path,
        class: "px-4 py-2 text-sm font-medium border-b-2 -mb-px transition-colors #{@filter == 'all' ? 'border-blue-600 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700'}" do %>
      All (<%= @total_count %>)
    <% end %>
    <%= link_to admin_leads_path(filter: "hot"),
        class: "px-4 py-2 text-sm font-medium border-b-2 -mb-px transition-colors #{@filter == 'hot' ? 'border-orange-500 text-orange-600' : 'border-transparent text-gray-500 hover:text-gray-700'}" do %>
      Hot (<%= @hot_count %>)
    <% end %>
    <%= link_to admin_leads_path(filter: "warm"),
        class: "px-4 py-2 text-sm font-medium border-b-2 -mb-px transition-colors #{@filter == 'warm' ? 'border-yellow-500 text-yellow-600' : 'border-transparent text-gray-500 hover:text-gray-700'}" do %>
      Warm (<%= @warm_count %>)
    <% end %>
    <%= link_to admin_leads_path(filter: "cold"),
        class: "px-4 py-2 text-sm font-medium border-b-2 -mb-px transition-colors #{@filter == 'cold' ? 'border-blue-300 text-blue-400' : 'border-transparent text-gray-500 hover:text-gray-700'}" do %>
      Cold (<%= Lead.cold_leads.count %>)
    <% end %>
  </div>

  <%# Leads Table %>
  <div class="overflow-x-auto bg-white shadow rounded-lg">
    <table class="w-full">
      <thead class="bg-gray-50 text-left text-sm text-gray-600 border-b">
        <tr>
          <th class="px-4 py-3 font-medium">Name</th>
          <th class="px-4 py-3 font-medium">Email</th>
          <th class="px-4 py-3 font-medium text-center">Signal</th>
          <th class="px-4 py-3 font-medium">Family Size</th>
          <th class="px-4 py-3 font-medium">Challenge</th>
          <th class="px-4 py-3 font-medium">Source</th>
          <th class="px-4 py-3 font-medium">Joined</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100">
        <% if @leads.any? %>
          <% @leads.each do |lead| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3">
                <div class="font-medium text-gray-900">
                  <%= lead.first_name.present? ? "#{lead.first_name} #{lead.last_name}" : "—" %>
                </div>
              </td>
              <td class="px-4 py-3 text-sm text-gray-600"><%= lead.email %></td>
              <td class="px-4 py-3 text-center">
                <% (1..5).each do |i| %>
                  <% if i <= (lead.signal_strength || 1) %>
                    <span class="text-yellow-400">&#9733;</span>
                  <% else %>
                    <span class="text-gray-300">&#9733;</span>
                  <% end %>
                <% end %>
              </td>
              <td class="px-4 py-3 text-sm text-gray-600">
                <%= lead.family_size.present? ? "#{lead.family_size} people" : "—" %>
              </td>
              <td class="px-4 py-3 text-sm text-gray-600">
                <% if lead.biggest_challenge.present? %>
                  <span class="inline-block px-2 py-0.5 bg-gray-100 rounded text-xs">
                    <%= lead.biggest_challenge.titleize %>
                  </span>
                <% else %>
                  —
                <% end %>
              </td>
              <td class="px-4 py-3 text-sm text-gray-500">
                <%= lead.source.present? ? lead.source : "direct" %>
              </td>
              <td class="px-4 py-3 text-sm text-gray-500">
                <%= lead.created_at.strftime("%b %d, %Y") %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="7" class="px-4 py-8 text-center text-gray-500">
              No leads found<%= " matching this filter" unless @filter == "all" %>.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
