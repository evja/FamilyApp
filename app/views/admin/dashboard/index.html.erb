<h1 class="text-2xl font-bold mb-6">Admin Dashboard</h1>
<%= button_to toggle_view_as_user_path, method: :post, class: "inline" do %>
  <span class="hover:underline text-indigo-400 font-semibold text-sm">
    <%= viewing_as_user? ? "Exit User View" : "View as User" %>
  </span>
<% end %>

<!-- Stats Row -->
<div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mt-6 mb-8">
  <div class="bg-white shadow rounded-lg p-4 text-center">
    <p class="text-3xl font-bold text-blue-700"><%= @users.count %></p>
    <p class="text-sm text-gray-500">Users</p>
  </div>
  <div class="bg-white shadow rounded-lg p-4 text-center">
    <p class="text-3xl font-bold text-blue-700"><%= @families.count %></p>
    <p class="text-sm text-gray-500">Families</p>
  </div>
  <div class="bg-white shadow rounded-lg p-4 text-center">
    <p class="text-3xl font-bold text-green-600"><%= @total_subscribers %></p>
    <p class="text-sm text-gray-500">Subscribers</p>
  </div>
  <div class="bg-white shadow rounded-lg p-4 text-center">
    <p class="text-3xl font-bold text-purple-600"><%= @leads.count %></p>
    <p class="text-sm text-gray-500">Leads</p>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <!-- Users List -->
  <div class="bg-white shadow rounded-lg p-4">
    <h2 class="text-lg font-semibold text-gray-700 mb-3">Users</h2>
    <div class="max-h-64 overflow-y-auto">
      <% @users.order(created_at: :desc).each do |user| %>
        <div class="text-sm text-gray-700 border-b py-2 flex items-center justify-between">
          <span><%= user.email %></span>
          <div class="flex gap-1">
            <% if user.admin? %>
              <span class="text-xs bg-red-100 text-red-600 px-2 py-0.5 rounded">Admin</span>
            <% end %>
            <% if user.beta_tester? %>
              <span class="text-xs bg-indigo-100 text-indigo-600 px-2 py-0.5 rounded">Beta</span>
            <% end %>
            <% if user.is_subscribed? %>
              <span class="text-xs bg-green-100 text-green-600 px-2 py-0.5 rounded">Subscribed</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Families List -->
  <div class="bg-white shadow rounded-lg p-4">
    <h2 class="text-lg font-semibold text-gray-700 mb-3">Families</h2>
    <div class="max-h-64 overflow-y-auto">
      <% @families.order(created_at: :desc).each do |family| %>
        <div class="text-sm text-gray-700 border-b py-2 flex items-center justify-between">
          <div>
            <span class="font-medium"><%= family.name %></span>
            <span class="text-gray-400 text-xs ml-2"><%= family.members.count %> members</span>
          </div>
          <% if family.subscribed? %>
            <span class="text-xs bg-green-100 text-green-600 px-2 py-0.5 rounded"><%= family.subscription_status.titleize %></span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Subscribers Section -->
  <div class="bg-white shadow rounded-lg p-4">
    <h2 class="text-lg font-semibold text-gray-700 mb-3">Subscribers</h2>
    <% if @user_subscribers.any? || @family_subscribers.any? %>
      <div class="max-h-64 overflow-y-auto">
        <% if @user_subscribers.any? %>
          <p class="text-xs text-gray-500 uppercase tracking-wide mb-2">User Subscriptions</p>
          <% @user_subscribers.each do |user| %>
            <div class="text-sm text-gray-700 border-b py-2 flex items-center justify-between">
              <span><%= user.email %></span>
              <span class="text-xs text-gray-400"><%= user.created_at.strftime("%b %d, %Y") %></span>
            </div>
          <% end %>
        <% end %>
        <% if @family_subscribers.any? %>
          <p class="text-xs text-gray-500 uppercase tracking-wide mb-2 mt-4">Family Subscriptions</p>
          <% @family_subscribers.each do |family| %>
            <div class="text-sm text-gray-700 border-b py-2 flex items-center justify-between">
              <div>
                <span class="font-medium"><%= family.name %></span>
                <span class="text-gray-400 text-xs ml-1">(<%= family.owner_user&.email || 'No owner' %>)</span>
              </div>
              <span class="text-xs bg-green-100 text-green-600 px-2 py-0.5 rounded"><%= family.subscription_status.titleize %></span>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="text-sm text-gray-400 italic">No subscribers yet</p>
    <% end %>
  </div>

  <!-- Leads Section with Filter Tabs -->
  <div class="bg-white shadow rounded-lg p-4">
    <div class="flex items-center justify-between mb-3">
      <h2 class="text-lg font-semibold text-gray-700">Leads</h2>
      <%= link_to "View All", admin_leads_path, class: "text-sm text-blue-600 hover:underline" %>
    </div>

    <!-- Filter Tabs -->
    <div class="flex gap-2 mb-4 flex-wrap">
      <%= link_to admin_dashboard_path(lead_filter: "all"),
          class: "text-sm px-3 py-1 rounded-full transition #{@lead_filter == 'all' ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}" do %>
        All (<%= @leads.count %>)
      <% end %>
      <%= link_to admin_dashboard_path(lead_filter: "hot"),
          class: "text-sm px-3 py-1 rounded-full transition #{@lead_filter == 'hot' ? 'bg-red-500 text-white' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}" do %>
        Hot (<%= @hot_leads_count %>)
      <% end %>
      <%= link_to admin_dashboard_path(lead_filter: "warm"),
          class: "text-sm px-3 py-1 rounded-full transition #{@lead_filter == 'warm' ? 'bg-orange-500 text-white' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}" do %>
        Warm (<%= @warm_leads_count %>)
      <% end %>
      <%= link_to admin_dashboard_path(lead_filter: "cold"),
          class: "text-sm px-3 py-1 rounded-full transition #{@lead_filter == 'cold' ? 'bg-blue-400 text-white' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}" do %>
        Cold (<%= @cold_leads_count %>)
      <% end %>
    </div>

    <!-- Leads Table -->
    <div class="max-h-64 overflow-y-auto">
      <% if @filtered_leads.any? %>
        <table class="w-full text-sm">
          <thead class="text-left text-gray-500 text-xs uppercase">
            <tr>
              <th class="pb-2">Name</th>
              <th class="pb-2">Signal</th>
              <th class="pb-2">Date</th>
            </tr>
          </thead>
          <tbody>
            <% @filtered_leads.each do |lead| %>
              <tr class="border-t">
                <td class="py-2">
                  <div class="font-medium text-gray-700"><%= lead.full_name %></div>
                  <div class="text-xs text-gray-400"><%= lead.email %></div>
                </td>
                <td class="py-2">
                  <% signal = lead.signal_strength || 0 %>
                  <div class="flex gap-0.5">
                    <% 5.times do |i| %>
                      <span class="<%= i < signal ? 'text-yellow-400' : 'text-gray-200' %>">&#9733;</span>
                    <% end %>
                  </div>
                </td>
                <td class="py-2 text-gray-400 text-xs"><%= lead.created_at.strftime("%b %d") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-sm text-gray-400 italic">No leads in this category</p>
      <% end %>
    </div>
  </div>
</div>

<div class="mt-8">
  <h2 class="text-lg font-semibold mb-2">Beta Feedback</h2>
  <%= link_to "View Feedback Responses", "https://docs.google.com/spreadsheets/d/1kouRJJARR8xK7cHiGI4QOuthcELv0Y2YzQI7ApGZnKg/edit?resourcekey=&gid=1291355705#gid=1291355705", target: "_blank", class: "text-blue-600 underline" %>
</div>
