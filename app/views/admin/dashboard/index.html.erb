<h1 class="text-2xl font-bold mb-6">Admin Dashboard</h1>
<%= button_to toggle_view_as_user_path, method: :post, class: "inline" do %>
  <span class="hover:underline text-indigo-400 font-semibold text-sm">
    <%= viewing_as_user? ? "Exit User View" : "View as User" %>
  </span>
<% end %>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
  <!-- Total Users -->
  <div class="bg-white shadow rounded-lg p-4 flex flex-col justify-between">
    <p class="text-sm text-gray-500 mb-1">Total Users</p>
    <p class="text-4xl font-bold text-blue-700 mb-3"><%= @users.count %></p>

    <div class="h-48 overflow-y-auto border-t pt-2">
      <% @users.each do |user| %>
        <div class="text-sm text-gray-700 border-b py-1">
          <%= user.email %>
          <% if user.admin? %><span class="text-xs text-red-500 ml-1">(admin)</span><% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-4 flex flex-col justify-between">
    <p class="text-gray-500 text-sm">Families</p>
    <p class="text-4xl font-bold text-blue-700 mb-3"><%= @families.count %></p>

    <div class="h-48 overflow-y-auto border-t pt-2">
      <% @families.each do |family| %>
        <div class="text-sm text-gray-700 border-b py-1">
          <%= family.name %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-4 flex flex-col justify-between">
    <div>
      <p class="text-gray-500 text-sm">Total Leads</p>
      <p class="text-4xl font-bold text-blue-700 mb-3"><%= @leads.count %></p>
    </div>
    <div class="mt-6">
      <%= link_to "View All Leads", admin_leads_path, class: "inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-4">
    <p class="text-gray-500 text-sm">Subscribers</p>
    <p class="text-4xl font-bold text-blue-700 mb-3"><%= @subscribers.count %></p>
  </div>


</div>

<div class="mt-8">
  <h2 class="text-lg font-semibold mb-2">Beta Feedback</h2>
  <%= link_to "View Feedback Responses", "https://docs.google.com/spreadsheets/d/1kouRJJARR8xK7cHiGI4QOuthcELv0Y2YzQI7ApGZnKg/edit?resourcekey=&gid=1291355705#gid=1291355705", target: "_blank", class: "text-blue-600 underline" %>
</div>