<div class="max-w-md mx-auto mt-12 p-8 bg-white shadow rounded">
  <h2 class="text-2xl font-semibold mb-6 text-center">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="actions",>
      <%= f.submit "Send me reset password instructions",class: "w-full bg-blue-600 text-white py-1 rounded hover:bg-blue-700 transition"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
