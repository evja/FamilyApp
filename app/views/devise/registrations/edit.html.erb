<h2 class="text-2xl font-bold mb-6">Update Account</h2>
<div class="max-w-md mx-auto mt-12 p-8 bg-white shadow rounded">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="space-y-4">
      <div>
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "w-full border rounded px-3 py-2" %>
      </div>

      <div>
        <%= f.label :password, "New password" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full border rounded px-3 py-2" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirm new password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border rounded px-3 py-2" %>
      </div>

      <div>
        <%= f.label :current_password, "Current password" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full border rounded px-3 py-2" %>
      </div>
    </div>

    <div class="mt-6 flex gap-4">
      <%= f.submit "Update", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
      <%= link_to "Cancel", family_path(current_user.family), class: "text-gray-600 hover:underline" %>
    </div>
    <hr class="my-8">
  <% end %>

    <div x-data="{ confirmingDeleteAccount: false }" class="bg-red-50 border border-red-200 rounded p-4 mt-6">
      <h3 class="text-red-700 font-semibold mb-2">Danger Zone</h3>
      <p class="text-sm text-red-600 mb-4">
        Deleting your account will remove all your data permanently. This action cannot be undone.
      </p>

      <!-- Trigger Button -->
      <button
        @click="confirmingDeleteAccount = true"
        class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded text-sm"
      >
        Delete My Account
      </button>

      <!-- Modal -->
      <div
        x-show="confirmingDeleteAccount"
        x-cloak
        x-transition
        class="fixed inset-0 z-50 bg-black bg-opacity-60 flex items-center justify-center"
      >
        <div
          x-show="confirmingDeleteAccount"
          x-transition:enter="transition ease-out duration-300"
          x-transition:enter-start="opacity-0 scale-90"
          x-transition:enter-end="opacity-100 scale-100"
          x-transition:leave="transition ease-in duration-200"
          x-transition:leave-start="opacity-100 scale-100"
          x-transition:leave-end="opacity-0 scale-90"
          class="bg-white rounded shadow-lg p-6 w-full max-w-md"
        >
          <h2 class="text-xl font-semibold text-red-700 mb-4">Are you absolutely sure?</h2>
          <p class="text-gray-700 mb-6">
            This action will delete your account and associated data permanently.
          </p>
          <div class="flex justify-end gap-4">
            <button @click="confirmingDeleteAccount = false" class="bg-gray-200 px-4 py-2 rounded hover:bg-gray-300">
              Cancel
            </button>
            <%= button_to "Yes, Delete My Account",
                  registration_path(resource_name),
                  method: :delete,
                  class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700" %>
          </div>
        </div>
      </div>
    </div>
</div>
