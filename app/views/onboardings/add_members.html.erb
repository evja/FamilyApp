<div class="bg-white rounded-2xl shadow-xl p-8 md:p-12">
  <!-- Header -->
  <div class="text-center mb-8">
    <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-600 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
    </div>
    <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2">
      Add Your Family Members
    </h1>
    <p class="text-gray-600">
      Start with one or two members - you can always add more later.
    </p>
  </div>

  <!-- Added Members List -->
  <% if @members.any? %>
    <div class="mb-8">
      <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Family Members</h3>
      <div class="space-y-3">
        <% @members.each do |member| %>
          <div class="flex items-center gap-3 p-4 bg-green-50 border border-green-200 rounded-lg">
            <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center text-white font-semibold">
              <%= member.name.first.upcase %>
            </div>
            <div class="flex-1">
              <p class="font-medium text-gray-900"><%= member.name %></p>
              <p class="text-sm text-gray-500"><%= member.display_role %></p>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600 celebrate-check" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Add Member Form -->
  <div class="bg-gray-50 rounded-xl p-6 mb-8" x-data="{ role: 'child', showAge: true }">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">
      <%= @members.any? ? 'Add Another Member' : 'Add Your First Member' %>
    </h3>

    <%= form_with model: [@family, @member], url: family_members_path(@family), method: :post, local: true do |f| %>
      <input type="hidden" name="onboarding_redirect" value="true">

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
        <!-- Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
          <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "First name", required: true %>
        </div>

        <!-- Role -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Role</label>
          <%= f.select :role,
              options_for_select([
                ['Parent', 'parent'],
                ['Teen (13+)', 'teen'],
                ['Child (under 13)', 'child']
              ], @member.role || 'child'),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              "x-model": "role" %>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
        <!-- Birthdate (optional) -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Birthdate <span class="text-gray-400">(optional)</span>
          </label>
          <%= f.date_field :birthdate, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Age (if no birthdate) -->
        <div x-show="role !== 'parent'">
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Age <span class="text-gray-400">(if no birthdate)</span>
          </label>
          <%= f.number_field :age, min: 0, max: 120, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "Age in years" %>
        </div>
      </div>

      <!-- Email for parents/teens -->
      <div x-show="role === 'parent' || role === 'teen'" class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Email <span class="text-gray-400">(for invitation)</span>
        </label>
        <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "email@example.com" %>
        <p class="mt-1 text-xs text-gray-500">They'll receive an invite to join your family.</p>
      </div>

      <button type="submit"
              class="w-full bg-green-600 text-white font-medium py-3 px-4 rounded-lg hover:bg-green-700 transition-colors flex items-center justify-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Add Member
      </button>
    <% end %>
  </div>

  <!-- Continue Button -->
  <%= form_with url: onboarding_path, method: :patch, local: true do %>
    <button type="submit"
            class="w-full bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-semibold py-4 px-6 rounded-lg hover:from-blue-600 hover:to-indigo-700 transition-all duration-200 shadow-lg hover:shadow-xl flex items-center justify-center gap-2">
      <% if @members.any? %>
        Continue to Next Step
      <% else %>
        Continue Without Adding Members
      <% end %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
      </svg>
    </button>
  <% end %>

  <!-- Hint -->
  <p class="text-center text-sm text-gray-500 mt-4">
    <% if @members.any? %>
      Great start! Add more members now or continue and invite them later.
    <% else %>
      You can always add family members later from your dashboard.
    <% end %>
  </p>
</div>

<% if @members.any? %>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Show celebration for newly added member
    <% if flash[:member_added] %>
      window.showToast('Member added successfully!', 'success');
    <% end %>
  });
</script>
<% end %>
