<%
  colors = @family.theme_colors
%>

<div class="max-w-6xl mx-auto">
  <%= render "shared/back_link", path: family_path(@family), text: "Back to Dashboard" %>

  <h2 class="text-2xl font-bold mb-6 mt-4 theme-text">Issues</h2>

  <!-- Filter Tabs -->
  <% if @has_any_issues %>
    <div class="flex flex-wrap gap-1 bg-gray-100 p-1 rounded-lg mb-6">
      <% [
        [nil, 'All', @counts[:all]],
        ['family', 'Family', @counts[:family]],
        ['parent', 'Parents', @counts[:parent]],
        ['individual', 'Individual', @counts[:individual]]
      ].each do |filter, label, count| %>
        <% active = (@list_filter == filter) || (filter.nil? && @list_filter.blank?) %>
        <% next if filter == 'parent' && !current_user.family_parent? %>
        <%= link_to family_issues_path(@family, list: filter),
            class: "flex-1 text-center py-2 px-3 rounded-md text-sm font-medium transition-all #{active ? 'bg-white shadow' : 'text-gray-600 hover:text-gray-900'}" do %>
          <%= label %>
          <span class="ml-1 text-xs <%= active ? '' : 'text-gray-400' %>">(<%= count %>)</span>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <% if !@has_any_issues %>
    <!-- Empty state -->
    <div class="max-w-xl mx-auto text-center py-12">
      <div class="bg-white p-8 rounded-lg shadow border" style="border-color: <%= colors[:secondary] %>;">
        <div class="mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: <%= colors[:primary] %>;">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2" style="color: <%= colors[:primary] %>;">Every family has them. Yours can grow from them.</h3>
        <p class="text-gray-600 mb-6">
          Issues aren't failures â€” they're signals that something matters to you.
          Logging them is the first step toward real change.
        </p>
        <div class="text-left mb-6 bg-gray-50 rounded-lg p-4">
          <p class="text-sm font-medium text-gray-700 mb-2">Families commonly log things like:</p>
          <ul class="text-sm text-gray-600 space-y-1">
            <li>Screen time boundaries feel inconsistent</li>
            <li>Morning routines are stressful</li>
            <li>Chores aren't shared fairly</li>
            <li>We're not eating dinner together enough</li>
          </ul>
        </div>
        <%= link_to "Log Your First Issue", new_family_issue_path(@family),
            class: "inline-block px-6 py-3 rounded font-medium text-white transition-all duration-300 hover:shadow-md",
            style: "background-color: #{colors[:primary]};" %>
      </div>
    </div>
  <% else %>
    <div class="flex flex-wrap gap-4 mb-6">
      <%= link_to "+ New Issue", new_family_issue_path(@family),
          class: "theme-button-filled" %>
    </div>

    <!-- Active Issues -->
    <% if @active_issues.any? %>
      <!-- Mobile cards -->
      <div class="block md:hidden space-y-4">
        <% @active_issues.each do |issue| %>
          <div class="bg-white p-4 rounded-lg shadow border theme-border">
            <div class="flex justify-between items-start mb-2">
              <div class="flex flex-wrap gap-1">
                <span class="text-xs font-medium px-2 py-1 rounded-full <%= Issue::STATUS_COLORS[issue.status] %>">
                  <%= Issue::STATUS_LABELS[issue.status] %>
                </span>
                <% if issue.list_type != 'family' %>
                  <span class="text-xs font-medium px-2 py-1 rounded-full bg-gray-100 text-gray-600">
                    <%= issue.list_type_label %>
                  </span>
                <% end %>
              </div>
              <% if issue.next_status %>
                <%= button_to advance_status_family_issue_path(@family, issue),
                    method: :patch,
                    class: "text-xs font-medium px-2 py-1 rounded border theme-button-outline" do %>
                  &rarr; <%= Issue::STATUS_LABELS[issue.next_status] %>
                <% end %>
              <% end %>
            </div>

            <p class="font-medium theme-text mt-2"><%= truncate(issue.description, length: 75) %></p>

            <% if issue.tagged_members.any? %>
              <div class="flex items-center gap-1 mt-2">
                <% issue.tagged_members.limit(3).each do |member| %>
                  <span class="w-5 h-5 rounded-full flex items-center justify-center text-xs font-bold text-white"
                        style="background-color: <%= member.display_color %>;"
                        title="<%= member.display_name %>">
                    <%= member.avatar_display %>
                  </span>
                <% end %>
                <% if issue.tagged_members.count > 3 %>
                  <span class="text-xs text-gray-500">+<%= issue.tagged_members.count - 3 %></span>
                <% end %>
              </div>
            <% end %>

            <div class="text-sm mt-2">
              <span class="font-medium theme-text">Urgency:</span>
              <span class="text-gray-700"><%= issue.urgency %></span>
            </div>

            <div class="flex gap-3 mt-3">
              <%= link_to "View", family_issue_path(@family, issue),
                  class: "theme-button-outline text-sm px-3 py-1" %>
              <%= link_to "Edit", edit_family_issue_path(@family, issue),
                  class: "theme-button-filled text-sm px-3 py-1" %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Desktop table -->
      <div class="hidden md:block overflow-x-auto">
        <table class="w-full table-auto border theme-border text-sm"><thead><tr class="theme-bg">
          <th class="px-4 py-2 text-left font-medium theme-text">Status</th>
          <th class="px-4 py-2 text-left font-medium theme-text">Description</th>
          <th class="px-4 py-2 text-left font-medium theme-text">Tagged</th>
          <th class="px-4 py-2 text-left font-medium theme-text">Urgency</th>
          <th class="px-4 py-2 text-left font-medium theme-text">Actions</th>
        </tr></thead>
        <tbody class="divide-y theme-border">
          <% @active_issues.each do |issue| %>
            <tr class="border-t theme-border hover:bg-gray-50">
              <td class="px-4 py-2">
                <div class="flex flex-col gap-1">
                  <span class="text-xs font-medium px-2 py-1 rounded-full <%= Issue::STATUS_COLORS[issue.status] %> inline-block w-fit">
                    <%= Issue::STATUS_LABELS[issue.status] %>
                  </span>
                  <% if issue.list_type != 'family' %>
                    <span class="text-xs font-medium px-2 py-1 rounded-full bg-gray-100 text-gray-600 inline-block w-fit">
                      <%= issue.list_type_label %>
                    </span>
                  <% end %>
                </div>
              </td>
              <td class="px-4 py-2 text-gray-700"><%= truncate(issue.description, length: 80) %></td>
              <td class="px-4 py-2">
                <% if issue.tagged_members.any? %>
                  <div class="flex items-center gap-1">
                    <% issue.tagged_members.limit(3).each do |member| %>
                      <span class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold text-white"
                            style="background-color: <%= member.display_color %>;"
                            title="<%= member.display_name %>">
                        <%= member.avatar_display %>
                      </span>
                    <% end %>
                    <% if issue.tagged_members.count > 3 %>
                      <span class="text-xs text-gray-500">+<%= issue.tagged_members.count - 3 %></span>
                    <% end %>
                  </div>
                <% else %>
                  <span class="text-gray-400 text-xs">-</span>
                <% end %>
              </td>
              <td class="px-4 py-2"><%= issue.urgency %></td>
              <td class="px-4 py-2 whitespace-nowrap">
                <div class="flex items-center gap-1">
                  <%= link_to "View", family_issue_path(@family, issue),
                      class: "theme-button-outline text-xs px-2 py-1" %>
                  <%= link_to "Edit", edit_family_issue_path(@family, issue),
                      class: "theme-button-filled text-xs px-2 py-1" %>
                  <% if issue.next_status %>
                    <%= button_to advance_status_family_issue_path(@family, issue),
                        method: :patch,
                        form: { class: "inline-flex" },
                        class: "text-xs font-medium px-2 py-1 rounded border theme-button-outline" do %>
                      &rarr; <%= Issue::STATUS_LABELS[issue.next_status] %>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500 py-4">All issues resolved! Nice work.</p>
    <% end %>

    <!-- Resolved Issues -->
    <% if @resolved_issues.any? %>
      <div class="mt-8" x-data="{ open: false }">
        <button @click="open = !open" class="flex items-center gap-2 text-sm font-medium mb-3" style="color: <%= colors[:primary] %>;">
          <svg :class="open && 'rotate-90'" class="w-4 h-4 transition-transform" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          Resolved (<%= @resolved_issues.size %>)
        </button>
        <div x-show="open" x-cloak class="space-y-2">
          <% @resolved_issues.each do |issue| %>
            <div class="bg-gray-50 p-3 rounded-lg border border-gray-200 flex justify-between items-center">
              <div>
                <span class="text-xs font-medium px-2 py-1 rounded-full bg-green-100 text-green-800 mr-2">Resolved</span>
                <span class="text-sm text-gray-700"><%= truncate(issue.description, length: 60) %></span>
                <% if issue.resolved_at %>
                  <span class="text-xs text-gray-400 ml-2"><%= time_ago_in_words(issue.resolved_at) %> ago</span>
                <% end %>
              </div>
              <%= link_to "View", family_issue_path(@family, issue),
                  class: "text-xs px-2 py-1 theme-button-outline" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>

  <%= link_to "&larr; Back to Dashboard".html_safe, family_path(@family),
      class: "theme-button-outline text-sm mt-6 inline-block" %>
</div>

<%= render "shared/module_tour",
    module_key: "issues",
    icon: "alert-circle",
    title: "Capture Family Challenges",
    purpose: "Problems don't go away when ignored - they grow. Capturing issues helps you address them before they escalate.",
    key_action: "Log what's weighing on your family",
    cta_text: "Log Your First Issue",
    cta_path: new_family_issue_path(@family) %>

